{
  "name": "pdf.js",
  "version": "0.8.0",
  "devDependencies": {
    "cpx": "1.5.0",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.7",
    "jsdoc": "^3.3.0-alpha9",
    "jshint": "~2.8.0",
    "make-dir-cli": "1.0.0",
    "node-ensure": "^0.0.0",
    "requirejs": "^2.1.22",
    "rimraf": "2.6.2",
    "shelljs": "~0.4.0",
    "typogr": "~0.6.5",
    "uglify-js": "^2.6.1",
    "wintersmith": "^2.0.0",
    "yargs": "^3.14.0"
  },
  "scripts": {
    "test": "gulp lint",
    "prebuild": "npm prune & npm install",
    "build": "node make.js generic components",
    "postbuild": "cpx build/generic/build/*.js build-dist/build",
    "deploy": "cd build-dist && make-dir .git && npm version patch -m \"RELEASE: version %s\" && npm publish && rimraf .git && cd ..",
    "version": "git add build-dist/package.json",
    "postdeploy": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/pdf.js.git"
  },
  "license": "Apache-2.0"
}
